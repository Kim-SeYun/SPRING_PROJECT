<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.jafa.repository.HotelRepository">
	<sql id="condition">
		<trim prefix="and">
			<choose>
				<when test="type=='N'.toString()">
					name like '%' ||#{keyword}||'%'
				</when>
				<when test="type=='A'.toString()">
					address like '%' ||#{keyword}||'%'
				</when>
				<when test="type=='P'.toString()">
					price like '%' ||#{keyword}||'%'
				</when>
			</choose>
		</trim>
		<if test="category != null and category != ''">
	    	and category = #{category}
    	</if>
	</sql>

	<select id="list" resultType="hotelVO">
		<!-- <![CDATA[
		select 
		    rn, bno, category, name, address, price
		from
		(
		    select 
		        /*+ index_desc(hotel_reserve pk_hotel_reserve) */
		        rownum as rn, bno, category, name, address, price
		    from 
		        hotel_reserve
		    where rownum <= #{maxRow}
		]]>
			<include refid="condition"/>
		<![CDATA[
		) 
		where rn > #{minRow}
		]]> -->
		select * from hotel_reserve 
		<where>
	    	<include refid="condition"/>
	    </where>
	</select>
	
	<select id="getTotalCount" resultType="int">
		select count(*) from hotel_reserve
		<where>
	    	<include refid="condition"/>
	    </where>
	</select>
	
	<update id="updateAttachFileCnt">
    	update hotel_reserve 
    	set
    		attachFileCnt = (select count(bno) from hotel_attach where bno=#{bno})
    	where bno = #{bno} 
    </update>
    
    <insert id="write" useGeneratedKeys="true" keyProperty="bno" keyColumn="bno">
    	insert into hotel_reserve(bno,category,name,address)
		values(hotel_reserve_seq.nextval,#{category},#{name},#{address})
    </insert>
	
	
</mapper>